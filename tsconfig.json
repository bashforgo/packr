{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": false,
    "lib": ["es2015","scripthost","dom"]
  },
  "compileOnSave": false,
  "include": ["src/**/*.ts"],
  "exclude": ["*.spec.ts", "typings/**"]
}
